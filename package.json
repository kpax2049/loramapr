{
  "name": "loramapr-backend",
  "version": "0.1.0",
  "private": true,
  "description": "NestJS backend",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "postinstall": "prisma generate",
    "start": "node dist/main.js",
    "start:dev": "ts-node src/main.ts",
    "dev:all": "concurrently -n backend,frontend -c blue,green \"npm run start:dev\" \"npm --prefix frontend run dev\"",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "apikey:mint": "ts-node scripts/mint-api-key.ts",
    "simulate:walk": "ts-node scripts/simulate-walk.ts",
    "dev:tts:fixture": "ts-node scripts/post-tts-fixture.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "lint": "echo \"No lint configured\"",
    "test": "jest --config test/jest-e2e.json --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@nestjs/platform-express": "^11.1.11",
    "@prisma/adapter-pg": "7.2.0",
    "@prisma/client": "7.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "joi": "^18.0.2",
    "zod": "^3.23.8",
    "pg": "8.17.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.11",
    "@types/jest": "^29.5.14",
    "@types/node": "^25.0.8",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^2.0.16",
    "concurrently": "^9.2.1",
    "dotenv": "17.2.3",
    "jest": "^29.7.0",
    "prisma": "7.2.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
