# Postgres (used by docker compose postgres service)
POSTGRES_DB=loramapr
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Backend
API_PORT=3000
DATABASE_URL=postgres://postgres:postgres@postgres:5432/loramapr

# Frontend / CORS
FRONTEND_PORT=5173
# Comma-separated CORS allowlist used in production.
# Examples:
# CORS_ORIGINS=http://localhost:5173
# CORS_ORIGINS=https://yourdomain.com
CORS_ORIGINS=http://localhost:5173,https://yourdomain.com
VITE_API_BASE_URL=http://backend:3000

# Local tooling / agents (optional but commonly used)
QUERY_API_KEY=
INGEST_API_KEY=

# LoRaWAN webhook auth (optional)
TTS_WEBHOOK_API_KEY=
TTS_WEBHOOK_BASIC_USER=
TTS_WEBHOOK_BASIC_PASS=

# Retention (raw-event cleanup)
RETENTION_WEBHOOKEVENT_DAYS=30
RETENTION_AGENTDECISION_DAYS=90
RETENTION_RUN_AT_STARTUP=false
RETENTION_SCHEDULE_CRON=0 3 * * *
